div(class='table')
  table(class='table table-striped table-condensed')
    thead
      tr
        th id
        th Kanji
        th Palabra
        th Componentes
        th Extra
    tbody
      each field in array
        tr
          td= field.id
          td!= '<a target="_blank" href="http://jisho.org/kanji/details/'+field.kanji+'">'+field.kanji+'</a>'
          td
            a(onclick='agregar("#{field.kanji}")')
              span= field.palabra
          td
            if field.comp1
              span= field.comp1
            if field.comp2
              span= ', '+field.comp2
            if field.comp3
              span= ', '+field.comp3
            if field.comp4
              span= ', '+field.comp4
            if field.comp5
              span= ', '+field.comp5
            if field.comp6
              span= ', '+field.comp6
          td!= '<button type="button" class="btn btn-info btn-xs" onClick=\'alert("Historia: '+field.historia+'\\n\\nSimilares: '+field.similares+'")\'>Info</button>'

div(class="text-center")
  button(type="button", class="btn btn-default", onClick="pagMenos1()")
    a(class="glyphicon glyphicon-chevron-left")
  button(type="button", class="btn btn-default", id='pagina')
    a= pagina
  button(type="button", class="btn btn-default", onClick="pagMas1()")
    a(class="glyphicon glyphicon-chevron-right", id="btn-sig")
  p(id="mensaje")